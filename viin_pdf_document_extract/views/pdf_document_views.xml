<odoo>
	<record id="pdf_document_tree_view" model="ir.ui.view">
		<field name='name'>pdf.document.tree</field>
		<field name="model">pdf.document</field>
		<field name="arch" type="xml">
			<tree decoration-danger="note=='anh'">
				<field name="name" />
				<field name="pdf_file" />
				<field name="data_ids" />
<!--				<field name="start_date"/>-->
<!--				<field name="end_date"/>-->
				<field name="note" />
				<field name="onchange_test"/>
			</tree>
		</field>
	</record>

	<record id="pdf_document_form_view" model="ir.ui.view">
		<field name='name'>pdf.document.form</field>
		<field name="model">pdf.document</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<div class="oe_title">
						<label for="name" />
						<h1>
							<field name="name" />
						</h1>
					</div>
					<group>
						<field name="pdf_file" class="oe_pdf"/>
						<field name="start_date"/>
						<field name="end_date"/>
						<field name="constraints_test"/>
					</group>
					<notebook>
						<page string="Document Data">
							<field name="data_ids">
								<tree>
									<field name="pdf_data" />
								</tree>
							</field>
						</page>
						<page string="Note">
							<field name="note"/>
						</page>
						<page string="Onchange_test">
							<field name="onchange_test"/>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="calender_view" model="ir.ui.view">
		<field name="name">calender.view</field>
		<field name="model">pdf.document</field>
		<field name="arch" type="xml">
			<calendar string= "PDF Document calender" date_start="start_date" color="name" date_stop="end_date">
				<field name="name" />
				<field name="pdf_file" />
				<field name="data_ids" />
				<field name="start_date"/>
				<field name="end_date"/>
				<field name="note" />
				<field name="onchange_test"/>
			</calendar>
		</field>
	</record>
	
	<record id="pdf_document_search_view" model="ir.ui.view">
		<field name="name">pdf.document.search</field>
		<field name="model">pdf.document</field>
		<field name="arch" type="xml">
			<search string="PDF Document Search">
				<field name="name"/>
				<field name="id"/>
				<filter string="Name = anh" name="frt_name" domain="[('name','=','anh')]" />
				<group string ="String Name" expand="0">
					<filter string="Group Start_date" name="gr_start_date" domain="[]" context="{'group_by':'start_date'}"/>
				</group>
			</search>
		</field>
	</record>


	<record id="action_pdf_document" model="ir.actions.act_window">
		<field name="name">PDF Documents</field>
		<field name="res_model">pdf.document</field>
		<field name="view_mode">tree,form,calendar</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
                Create new pdf document.
              </p>
		</field>
	</record>
	<menuitem id="pdf_document_menu_root" name="PDF Document" groups="base.group_user" />
	<menuitem id="pdf_document_menu" name="PDF Document" action="action_pdf_document" parent="pdf_document_menu_root" />
	
	

</odoo>